@page
@model LoginModel

<section class="login-box">
    <div class="card">
        <div class="card-content white-text">
            <span class="card-title center">
                <label class="flow-text">
                    <strong>Autenticar</strong>
                </label>
            </span>
            <div>
                <form id="account" method="post">
                    <div class="row">
                        <input asp-for="Input.Email" class="validate" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="">E-mail</label>
                    </div>
                    <div class="row">
                        <input asp-for="Input.Password" class="validate" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="">Senha</label>
                    </div>
                    <div class="row">
                        <div class="col s3">
                            <label asp-for="Input.RememberMe" class="flow-text">
                                <input type="checkbox" class="filled-in" asp-for="Input.RememberMe" />
                                <span>Lembrar de mim</span>
                            </label>
                        </div>
                        <div class="col s2 offset-s7">
                            <button id="login-submit" type="submit" class="btn waves-effect waves-light teal">ENTRAR</button>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" role="alert"></div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
