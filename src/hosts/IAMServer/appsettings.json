{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DataSourceSettings": {
    "ConnectionString": "mongodb://localhost:27020",
    "DatabaseName": "IamDb",
    "RetryOperationMaxCount": 3
  },
  "IAMServerSettings": {
    "ApiResources": [
      {
        "Name": "LeadManagerApi",
        "Scopes": [
          "offline_access"
        ],
        "UserClaims": [
          "role"
        ]
      }
    ],
    "Clients": [
      {
        "ClientId": "leadmanager_spa",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequireClientSecret": false,
        "RedirectUris": [
          "http://localhost:4200/auth-callback"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:4200/user-logged-out"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "offline_access",
          "roles"
        ],
        "AlwaysIncludeUserClaimsInIdToken": true,
        "AllowedCorsOrigins": [ "http://localhost:4200" ], //https://github.com/IdentityServer/IdentityServer4/issues/4737
        "AllowOfflineAccess": true,
        "AccessTokenLifeTime": 600,
        "AbsoluteRefreshTokenLifetime": 86400
      }
    ]
  },
  "LeadWebAppClientSettings": {
    "BaseUrl": "http://localhost:4200",
    "Methods": "POST, GET, PUT, DELETE, HEAD, OPTIONS"
  }
}